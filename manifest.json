{
    "manifest_version": 2,

    "name": "ClassChat",
    "version": "1.0.1.6",
    "icons": {
         "16": "icon16.png",
         "48": "icon48.png",
        "128": "icon128.png"
    },

    "description": "Adds instant message-like functionality to Piazza and Blackboard class pages.",

    "permissions": [
        "tabs"
    ],

    "content_scripts": [
        {
            "matches": ["*://piazza.com/class/*"],
            "js": ["jquery-2.1.3.min.js", "common.js", "piazza.js"],
            "css": ["piazza.css"],
            "run_at": "document_start"
        },
        {
            "matches": ["*://ted.ucsd.edu/*Course%26id*"],
            "js": ["jquery-2.1.3.min.js", "common.js", "blackboard.js"],
            "run_at": "document_end"
        },
        {
            "matches": ["https://kiwiirc.com/client/irc.freenode.net/"],
            "js": ["jquery-2.1.3.min.js", "stylelistener.jquery.min.js", "cleankiwi.js"],
            "css": ["cleankiwi.css"],
            "run_at": "document_end",
            "all_frames": true
        }
    ],

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
}